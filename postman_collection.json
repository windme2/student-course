{
	"info": {
		"_postman_id": "student-api-collection",
		"name": "Student Course Management API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Students",
			"item": [
				{
					"name": "Get All Students",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/students",
							"host": ["{{base_url}}"],
							"path": ["students"]
						}
					}
				},
				{
					"name": "Search Students",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/students/search?q=John",
							"host": ["{{base_url}}"],
							"path": ["students", "search"],
							"query": [
								{
									"key": "q",
									"value": "John"
								}
							]
						}
					}
				},
				{
					"name": "Create Student",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"fullname\": \"Nest Tester\",\n    \"email\": \"nest@test.com\",\n    \"major\": \"IT\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/students",
							"host": ["{{base_url}}"],
							"path": ["students"]
						}
					}
				},
				{
					"name": "Update Student",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"fullname\": \"Wind Intouch\",\n    \"email\": \"wind_new@test.com\",\n    \"major\": \"Software Engineering\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/students/:id",
							"host": ["{{base_url}}"],
							"path": ["students", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1"
								}
							]
						}
					}
				},
				{
					"name": "Delete Student",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/students/:id",
							"host": ["{{base_url}}"],
							"path": ["students", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Courses",
			"item": [
				{
					"name": "Get All Courses",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/courses",
							"host": ["{{base_url}}"],
							"path": ["courses"]
						}
					}
				},
				{
					"name": "Create Course",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Python\",\n    \"description\": \"Basic Programming\",\n    \"credit\": 3\n}"
						},
						"url": {
							"raw": "{{base_url}}/courses",
							"host": ["{{base_url}}"],
							"path": ["courses"]
						}
					}
				},
				{
					"name": "Update Course",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Advanced Python\",\n    \"description\": \"Deep Dive\",\n    \"credit\": 4\n}"
						},
						"url": {
							"raw": "{{base_url}}/courses/:id",
							"host": ["{{base_url}}"],
							"path": ["courses", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1"
								}
							]
						}
					}
				},
				{
					"name": "Delete Course",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/courses/:id",
							"host": ["{{base_url}}"],
							"path": ["courses", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Enrollments",
			"item": [
				{
					"name": "Enroll Student",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"student_id\": 1,\n    \"course_id\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/enrollments",
							"host": ["{{base_url}}"],
							"path": ["enrollments"]
						}
					}
				},
				{
					"name": "Get Student Courses",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/students/:id/courses",
							"host": ["{{base_url}}"],
							"path": ["students", ":id", "courses"],
							"variable": [
								{
									"key": "id",
									"value": "1"
								}
							]
						}
					}
				},
				{
					"name": "Cancel Enrollment",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/enrollments/:id",
							"host": ["{{base_url}}"],
							"path": ["enrollments", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "1"
								}
							]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000"
		}
	]
}
